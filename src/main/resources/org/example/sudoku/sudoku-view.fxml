<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.sudoku.SudokuController"
      alignment="CENTER"
      spacing="20"
      style="-fx-background-color: #F5F5F5;">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Solucionador de Sudoku"
           style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #1976D2;"/>

    <Label text="Ingresa los números iniciales (1-9) y presiona Resolver"
           style="-fx-font-size: 14px; -fx-text-fill: #666;"/>

    <GridPane fx:id="gridSudoku"
              alignment="CENTER"
              style="-fx-background-color: white; -fx-padding: 10;">
    </GridPane>

    <HBox spacing="15" alignment="CENTER">
        <Button fx:id="btnResolver"
                text="Resolver"
                onAction="#resolverSudoku"
                style="-fx-font-size: 16px; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-padding: 10 30;"
                prefWidth="150"/>

        <Button fx:id="btnLimpiar"
                text="Limpiar"
                onAction="#limpiarTablero"
                style="-fx-font-size: 16px; -fx-background-color: #F44336; -fx-text-fill: white; -fx-padding: 10 30;"
                prefWidth="150"/>
    </HBox>

    <Label text="Verde: números iniciales | Azul: números resueltos"
           style="-fx-font-size: 12px; -fx-text-fill: #999;"/>

</VBox>